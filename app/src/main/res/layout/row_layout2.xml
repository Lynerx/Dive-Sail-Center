<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/row_layout2"
    tools:ignore="ContentDescription"
    android:paddingBottom="30dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/id_image_s1"
            android:layout_width="200dp"
            android:layout_height="137dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/s1"
            app:layout_constraintEnd_toStartOf="@+id/id_image_s2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/id_image_s2"
            android:layout_width="200dp"
            android:layout_height="135dp"
            android:layout_marginStart="207dp"
            android:src="@drawable/s2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/id_image_s3"
            android:layout_width="200dp"
            android:layout_height="136dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/s3"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="190dp" />


        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/id_image_s4"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:layout_marginTop="572sp"
            android:src="@drawable/s4"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="374dp" />

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/id_image_s5"
            android:layout_width="200dp"
            android:layout_height="138dp"
            android:layout_marginStart="207sp"
            android:layout_marginTop="140sp"
            android:src="@drawable/s5"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="475dp" />

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/id_image_s6"
            android:layout_width="match_parent"
            android:layout_height="275sp"
            android:layout_marginTop="287dp"
            android:src="@drawable/s6"
            app:layout_constraintStart_toStartOf="parent" />


    </FrameLayout>


</ScrollView>